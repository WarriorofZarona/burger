<div class="img relative"><img src="/img/burger.jpg" alt="burger" class="center" /></div>


<h1 class="title relative">Eat-Da-Burger!</h1>

<div class="container-fluid">
    <div class="row">
        <div class="col-6">
            <div class="todevour">
                <ul>
                    {{#each burgers}}
                    {{#unless devoured}}

                    <li class="devourchoice">
                        Order #{{id}}: {{burger_name}}

                        <button class="change-devoured btn btn-danger" data-id="{{id}}" data-newdevoured="{{devoured}}">
                            {{#unless devoured}}Devour it!{{/unless}}
                        </button>
                    </li>

                    {{/unless}}
                    {{/each}}
                </ul>
            </div>
        </div>

        <div class="col-6">
            <div class="devoured text-secondary">
                <ul>
                    {{#each burgers}}
                    {{#if devoured}}

                    <li class="yum">
                        Order #{{id}}: {{burger_name}}
                    </li>
                    {{/if}}
                    {{/each}}
                </ul>
            </div>
        </div>
    </div>
</div>


<h2>Add a Burger</h2>
<form class="create-form">

    <div class="form-group">
        <label for="bg">Burger Name:</label>
        <input type="text" id="bg" name="burger_name">
    </div>

    <div class="form-group">
        <input type="radio" name="devoured" value="0" checked> Devour later?<br>
        <input type="radio" name="devoured" value="1"> Devour now?
    </div>

    <button type="submit btn btn-primary">Add Burger</button>
</form>

<script>
    $(".change-devoured").on("click", function (event) {
        console.log("IS THIS BEING CLICKED?")
        let id = $(this).data("id");
        console.log(id);
        let newDevoured = 1;

        const newDevouredState = {
            devoured: newDevoured
        }

        $.ajax("/api/burgers/" + id, {
            type: "PUT",
            data: newDevouredState
        }).then(
            () => {
                console.log("changed devoured to", newDevoured);
                location.reload();
            }
        )
    });

    $(".create-form").on("submit", event => {
        event.preventDefault();

        const newBurger = {
            burger_name: $("#bg").val().trim(),
            devoured: $("[name=devoured]:checked").val().trim()
        }

        $.ajax("/api/burgers", {
            type: "POST",
            data: newBurger
        }).then(
            () => {
                console.log("created new burger");
                location.reload();
            });
    });


</script>